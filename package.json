{
  "name": "spotify-clone-luizalabs-coding-challenge-graphql-api",
  "version": "0.0.0",
  "description": "GraphQL API for Spotify Clone (Luiza Labs Coding Challenge)",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "nodemon --watch src --ext ts,graphql --exec \"node --loader ts-node/esm --experimental-specifier-resolution=node src/index.ts\"",
    "prebuild": "npm run lint && npm run codegen",
    "build": "tsup src/index.ts --format esm --dts --out-dir dist --clean",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:unit": "vitest run --coverage",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "lint:fix": "eslint . --ext .ts --fix",
    "codegen": "graphql-codegen --config codegen.ts"
  },
  "keywords": [
    "graphql",
    "spotify",
    "apollo",
    "typescript",
    "luizalabs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@dcoutinho96/spotify-clone-luizalabs-coding-challenge-graphql-schema": "^1.3.0",
    "axios": "^1.11.0",
    "dotenv": "^17.2.1",
    "graphql": "^16.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript": "^4.0.3",
    "@graphql-codegen/typescript-resolvers": "^4.0.3",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.4"
  }
}
