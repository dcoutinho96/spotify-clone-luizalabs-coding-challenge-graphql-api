{
  "name": "spotify-clone-luizalabs-coding-challenge-graphql-api",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,graphql --exec \"tsx src/index.ts\"",
    "build": "tsup src/index.ts --format esm --dts --out-dir dist --clean",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:unit": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "sonar": "sonar-scanner",
    "sonar:local": "dotenv -e .env -- npm run sonar"
  },
  "imports": {
    "#/*": "./src/*",
    "#graphql/*": "./src/graphql/*",
    "#graphql/server": "./src/graphql/server.ts",
    "#graphql/resolvers/*": "./src/graphql/resolvers/*",
    "#graphql/resolvers": "./src/graphql/resolvers/index.ts",
    "#mappers/*": "./src/mappers/*",
    "#utils/*": "./src/utils/*",
    "#types/*": "./src/types/*",
    "#gql/*": "./src/gql/*",
    "#gql/generated": "./src/gql/generated.ts",
    "#context": "./src/context.ts",
    "#services/*": "./src/services/*",
    "#services/spotify/*": "./src/services/spotify/*"
  },
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@dcoutinho96/spotify-clone-luizalabs-coding-challenge-graphql-schema": "^1.3.2",
    "axios": "^1.11.0",
    "dotenv": "^17.2.1",
    "graphql": "^16.11.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@typescript-eslint/utils": "^8.40.0",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-unused-imports": "^4.1.3",
    "nodemon": "^3.1.10",
    "tsup": "^8.5.0",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
